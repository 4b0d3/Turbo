{% block header %}
    <header id="mainHeader">
        <h1><a href="{{ BASEURL }}">Turbo</a></h1>
        <nav>
            <ul>  
                {% if user.role == "admin" %}
                    <li><a href="{{ HOST }}admin/scooters/"><i class="fa-solid fa-toolbox"></i></a></li>
                {% endif %} 

                <li><a href="{{ BASEURL }}partners/"><i class="fa-solid fa-handshake"></i></a></li>   
                <li><a href="{{ BASEURL }}shop/"><i class="fa-solid fa-cart-plus"></i></a></li>
                <li id="btn-cart" data-userId="{{ user.id }}"><i class="fa-solid fa-bag-shopping"></i></li>

                {% if user.authenticated %}
                    <li><a href="{{ BASEURL }}my-account/"><i class="fa-solid fa-user"></i></a></li>
                {% else %}
                    <li><a href="{{ BASEURL }}login/"><i class="fa-solid fa-arrow-right-to-bracket"></i></a></li>
                {% endif %}
            </ul>

        </nav>
        <div class="{{ cart.show is null ? 'hide'}}" id="cart">
            <h3>{{ "Panier"|trans }}</h3>
            <div class="products">
                {% if cart is not null %}
                    <div class="product">
                        <div>{{ "Produit"|trans }}</div>
                        <div>{{ "Quantit√©"|trans }}</div>
                        <div>{{ "Prix"|trans }}</div>
                    </div>
                    {% for product in cart.products|slice(0, 3) %}
                        <div class="product">
                            <div>{{ product.name|trans }}</div>
                            <div>{{ product.quantity }}</div>
                            <div>{{ product.quantity * product.price }}</div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            <div><a href="{{ BASEURL }}cart/">{{ "Voir le panier"|trans }}</a></div>
        </div>
    </header>
{% endblock header %}