{% block header %}
    <header id="mainHeader">
        <h1><a href="{{ BASEURL }}">Turbo</a></h1>
        <nav>
            <ul>  
                {% if user.role == "admin" %}
                    <li><a href="{{ HOST }}admin/scooters/"><i class="fa-solid fa-toolbox"></i></a></li>
                {% endif %} 

                <li><a href="{{ BASEURL }}shop/"><i class="fa-solid fa-cart-plus"></i></a></li>
                <li id="btn-cart" data-userId="{{ user.id }}"><i class="fa-solid fa-bag-shopping"></i></li>

                {% if user.authenticated %}
                    <li><a href="{{ BASEURL }}my-account/"><i class="fa-solid fa-user"></i></a></li>
                {% else %}
                    <li><a href="{{ BASEURL }}login/"><i class="fa-solid fa-arrow-right-to-bracket"></i></a></li>
                {% endif %}
            </ul>

        </nav>
        <div class="hide" id="cart">
            <h3>Panier</h3>
            <table style="width: 100%;" id="cart-content">
                <tr>
                    <td>Name</td>
                    <td>Price</td>
                    <td>
                        <button>-</button>
                        <span>1</span>
                        <button>+</button>
                    </td>
                </tr>
            </table>
            <a href="">Voir le panier</a>
        </div>
    </header>
{% endblock header %}