{% set navActive = "weather" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

        {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>La météo</h1>
            <nav>
                <ul>
                    <form action="{{ HERE }}" method="POST">
                    <input type="submit" class="btn-header-filled" value="Actualiser">
                    </form>
                </ul>
            </nav>
        </header>

        <nav id="admin-nav">
            <ul>
                <li><a href="{{ HERE }}" class="active">Météo</a></li>
            </ul>
        </nav>

        <section id="admin-content">
            <table id="table-content">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Date</th>
                        <th>Ville</th>
                        <th>Température</th>
                        <th>Humidité</th>
                        <th>Ressenti</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    {% for weather in weathers %}
                        <tr>
                            <td>{{ weather.id }}</td>
                            <td>{{ weather.date }}</td>
                            <td>{{ weather.city }}</td>
                            <td>{{ weather.temp }}</td>
                            <td>{{ weather.humidity }}</td>
                            <td>{{ weather.feels_like }}</td>
                            <td>{{ weather.description }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <nav id="pagination">

            </nav>
        </section>
    </section>
{% endblock content %}