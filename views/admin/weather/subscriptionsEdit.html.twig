{% set navActive = "subscriptions" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

       {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>Editer un Abonnement</h1>
        </header>

        {% include "admin/subscriptions/navAdminSubscriptions.html.twig" with {active : "edit"} %}


        <section id="admin-content">
            <form action="{{ HERE }}" method="POST" id="form-subscription-edit">
                <div class="box-input-txt">
                    <label>
                        <div>Id</div>
                        <input value="{{ subscription.id ?? '' }}" readonly>
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Nom</div>
                        <input type="text" name="name" value="{{ subscription.name ?? '' }}">
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Description</div>
                        <textarea name="description" id="" cols="92" rows="5">{{ subscription.description ?? '' }}</textarea>
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Prix</div>
                        <input type="text" name="price" value="{{ subscription.price ?? '' }}">
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Titre</div>
                        <input type="text" name="title" value="{{ subscription.title ?? '' }}">
                    </label>
                </div>

                <div class="box-input-submit">
                    <input type="submit" value="Editer">
                </div>
            </form>
        </section>
    </section>
{% endblock content %}