{% set navActive = "products" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

        {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>Liste des produits</h1>
            <nav>
                <ul>
                    <li><a href="{{ HERE }}add/" class="btn-header-filled"><span>Ajouter</span></a></li>
                </ul>
            </nav>
        </header>

        <nav id="admin-nav">
            <ul>
                <li><a href="{{ HERE }}" class="active">Produits</a></li>
            </ul>
        </nav>

        <section id="admin-content">
            <table id="table-content">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>En promotion</th>
                        <th>Promotion</th>
                        <th>Quantit√©</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.price }}</td>
                            <td>{{ product.isPromotion ? "Oui" : "Non" }}</td>
                            <td>{{ product.promotion }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>
                                <a href="{{ HERE }}{{ product.id }}/view/">Voir</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <nav id="pagination">

            </nav>
        </section>
    </section>
{% endblock content %}