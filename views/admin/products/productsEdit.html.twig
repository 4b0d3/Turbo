{% set navActive = "products" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

       {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>Editer un produit</h1>
        </header>

        {% include "admin/products/navAdminProducts.html.twig" with {active : "edit"} %}


        <section id="admin-content">
            <form action="{{ HERE }}" method="POST" id="form-products-edit">
                <div class="box-input-txt">
                    <label>
                        <div>Id</div>
                        <input value="{{ product.id ?? '' }}" readonly>
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Nom</div>
                        <input type="text" name="name" value="{{ product.name ?? '' }}">
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Description</div>
                        <textarea name="description" id="" cols="92" rows="5">{{ product.description ?? '' }}</textarea>
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Prix</div>
                        <input type="text" name="price" value="{{ product.price ?? '' }}">
                    </label>
                </div>

                <div class="box-input-toggle">
                    <label>
                        <div>En promotion</div>
                        <input type='hidden' value='0' name='isPromotion'>
                        <input type="checkbox" name="isPromotion" {{ product.isPromotion ? "checked" : "" }} value="1">
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Quantit√©</div>
                        <input type="text" name="quantity" value="{{ product.quantity ?? '' }}">
                    </label>
                </div>

                <div class="box-input-submit">
                    <input type="submit" value="Editer">
                </div>
            </form>
        </section>
    </section>
{% endblock content %}