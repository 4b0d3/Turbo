{% set navActive = "scooters" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

       {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>Editer une Trottinette</h1>
        </header>

        {% include "admin/scooters/navAdminScooters.html.twig" with {active : "edit"} %}


        <section id="admin-content">
            <form action="{{ HERE }}" method="POST" id="form-scooter-edit">
                <div class="box-input-txt">
                    <label>
                        <div>Id</div>
                        <input value="{{ scooter.id ?? '' }}" readonly>
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Batterie</div>
                        <input type="text" name="battery" value="{{ scooter.battery ?? '' }}" >
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Status</div>
                        <input type="text" name="status" value="{{ scooter.status ?? '' }}" >
                    </label>
                </div>
                
                <div class="box-input-submit">
                    <input type="submit" value="Editer">
                </div>
            </form>
        </section>
    </section>
{% endblock content %}