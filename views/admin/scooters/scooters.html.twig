{% set navActive = "scooters" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

        <header id="admin-header">
            <h1>Liste des trottinettes</h1>
            <nav>
                <ul>
                    <li><a href="add" class="btn-header-filled"><span>Ajouter</span></a></li>
                </ul>
            </nav>
        </header>

        <nav id="admin-nav">
            <ul>
                <li><a href="{{ HOST }}admin/scooters/" class="active">Trottinettes</a></li>
            </ul>
        </nav>

        <section id="admin-content">
            <table id="table-content">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Charge</th>
                        <th>Qr Code</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for scooter in scooters %}
                        <tr>
                            <td>{{ scooter.id }}</td>
                            <td>{{ scooter.latitude }}</td>
                            <td>{{ scooter.longitude }}</td>
                            <td>{{ scooter.battery }}%</td>
                            <td>{{ scooter.qrcode ?: "none" }}</td>
                            <td>
                                <select name="" id="">
                                    <option value=""><a href="{{ HERE }}/{{ scooter.id}}/delete">delete</a></option>
                                    <option><a href="{{ HERE }}/{{ scooter.id}}/edit">edit</a></option>

                                </select>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <nav id="pagination">

            </nav>
        </section>
    </section>
{% endblock content %}