{% set navActive = "rides" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

        {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>Liste des trajets</h1>
        </header>

        <nav id="admin-nav">
            <ul>
                <li><a href="{{ HERE }}" class="active">Trajets</a></li>
            </ul>
        </nav>

        <section id="admin-content">
            <table id="table-content">
                <thead>
                    <tr>
                        <th>Id de trajet</th>
                        <th>Id d'user</th>
                        <th>Id de trottinette </th>
                        <th>Date</th>
                        <th>Prix</th>
                        <th>Temps</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ride in rides %}
                        <tr>
                            <td>{{ ride.id }}</td>
                            <td>{{ ride.idUser }}</td>
                            <td>{{ ride.idScooter }}</td>
                            <td>{{ ride.startTime }}</td>
                            <td>{{ ride.price }}</td>
                            <td>{{ ride.price }}</td>

                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <nav id="pagination">

            </nav>
        </section>
    </section>
{% endblock content %}