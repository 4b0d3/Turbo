{% set navActive = "subscriptions" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

       {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>Voir les informations d'un abonnement</h1>
        </header>

        {% include "admin/subscriptions/navAdminSubscriptions.html.twig" with {active : "view"} %}

        <section id="admin-content">
                <div class="box-input-txt">
                    <label>
                        <div>Id</div>
                        <input value="{{ subscription.id ?? '' }}" readonly>
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Nom</div>
                        <input type="text" name="name" value="{{ subscription.name ?? '' }}" readonly>
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Description</div>
                        <input type="text" value="{{ subscription.description ?? '' }}" readonly>
                    </label>
                </div>

                <div class="box-input-txt">
                    <label>
                        <div>Prix</div>
                        <input type="text" value="{{ subscription.price ?? '' }}" readonly>
                    </label>
                </div>

                
                <div class="box-input-txt">
                    <label>
                        <div>Titre</div>
                        <input type="text" value="{{ subscription.title ?? '' }}" readonly>
                    </label>
                </div>
        </section>
    </section>
{% endblock content %}