{% set navActive = "users" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

       {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>Liste des roles</h1>
            <nav>
                <ul>
                    <li><a href="{{ HERE }}add/" class="btn-header-filled"><span>Ajouter</span></a></li>
                </ul>
            </nav>
        </header>

        <nav id="admin-nav">
            <ul>
                <li><a href="{{ HOST }}admin/users/">Utilisateurs</a></li>
                <li><a href="{{ HERE }}" class="active">Roles</a></li>
            </ul>
        </nav>

        <section id="admin-content">
            <table id="table-content">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Role</th>
                        <th>Date de cr√©ation</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for role in roles %}
                        <tr>
                            <td>{{ role.id }}</td>
                            <td>{{ role.name }}</td>
                            <td>{{ role.createdAt|date("d/m/Y") }}</td>
                            <td>
                                <a href="{{ HERE }}{{ role.id}}/delete/">delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>
    </section>
{% endblock content %}