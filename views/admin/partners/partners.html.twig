{% set navActive = "partners" %}

{% extends "templates/admin.html.twig" %}

{% block content %}
    <section id="container-admin">

        {{ include('includes/boxMessages.html.twig') }}

        <header id="admin-header">
            <h1>Liste des partners</h1>
        </header>

        <nav id="admin-nav">
            <ul>
                <li><a href="{{ HERE }}" class="active">Partners</a></li>
            </ul>
        </nav>

        <section id="admin-content">
            <table id="table-content">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for partner in partners %}
                        <tr>
                            <td>{{ partner.id }}</td>
                            <td>{{ partner.name }}</td>
                            <td>{{ partner.price }}</td>
                            <td>
                                <a href="{{ HERE }}{{ partner.id }}/view/">Voir</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <nav id="pagination">

            </nav>
        </section>
    </section>
{% endblock content %}