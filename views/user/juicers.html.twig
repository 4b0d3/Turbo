{% set navActive = " " %}

{% extends "templates/juicer.html.twig" %}

{% block content %}
    <section id="container-admin">

        <header id="admin-header">
            <h1>Liste des trottinettes</h1>
        </header>

        <nav id="admin-nav">
            <ul>
                <li><a href="{{ HERE }}" class="active">Trottinettes</a></li>
            </ul>
        </nav>

        <section id="admin-content">
            <table id="table-content">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Charge</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for scooter in scooters %}
                        <tr>
                            <td>{{ scooter.id }}</td>
                            <td>{{ scooter.latitude }}</td>
                            <td>{{ scooter.longitude }}</td>
                            <td>{{ scooter.battery }}%</td>
                            <td><a href="{{ HERE }}{{ scooter.id }}/charged/">Valider</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <nav id="pagination">

            </nav>
        </section>
    </section>
{% endblock content %}