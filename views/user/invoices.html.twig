{% set navActive = "invoices" %}

{% extends "templates/user.html.twig" %}

{% block content %}
    <section id="display">
        
        {{ include('includes/boxMessages.html.twig') }}

        <div class="header">
            <h1><i class="fa-solid fa-file-invoice fa-lg fa-fade" style="--fa-fade-opacity: 0.8;"></i> {{ "MES FACTEURS"|trans }}</h1>
            <p>{{ "Liste de vos facteurs"|trans }}.</p>
        </div>

        {% if invoices is defined %}
        <div id="container-invoices">
            {% for invoice in invoices %}
                <div class="container-invoices">
                        <p><span>{{ "Commande nÂ°"|trans }} : </span><span>{{ invoice.invoiceN}}</span></p>
                        <p><span>{{ "Date"|trans }}:</span> <span>{{ invoice.invoiceDate}}</span></p>
                        <p><span><a href="{{ HOST }}{{ invoice.invoiceLink }}">{{ "Voir la facture"|trans }}</a></p>
                </div>
            {% endfor %}
        </div>

        {% else %}
            <div id="container-sub">
                <p>{{ "Actuellement vous ne posseder aucune facture"|trans }}</p>
            </div>
        {% endif %}
    </section>
{% endblock content %}

