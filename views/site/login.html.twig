{% extends "templates/site.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ STYLESHEETS }}login.css">
{% endblock stylesheets %}

{% block body %}
    <main>
        <div id="container">
            <!-- zone de connexion -->

            <form action="{{ HERE }}" method="POST">
                <h3><a href="{{ BASEURL }}" style="text-align: center; margin-bottom: 15px; color: #FD7014; text-decoration: none; font-size: 2rem; display: inline-block; width: 100%;">Turbo</a></h3>
                <h1 style="text-align: center;">Account login</h1>
                
                <input type="text" placeholder="Email" name="email" value="{{ form.email ?? "" }}" required>
                
                <input type="password" placeholder="Password" name="password" required>
                
                {% if error is defined %}
                    <p style='color:red; margin: 5px 0; text-align: center;'>{{ error.message }}</p>                    
                {% endif %}
                
                <input type="submit" id='submit' value='Login' >

                <a href="{{ BASEURL }}register/" class="linkRegister"><h3 >Need help?</h3></a>
            </form>
            <br>
            <div class="noAccount">
                <h1 class="question">No account yet ?</h1>
                <a href="{{ BASEURL }}register/" class="createAccount">Create account</a>
            </div>
        </div>
    </main>
{% endblock body %}