{% extends "templates/site.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ STYLESHEETS }}shop.css">
{% endblock stylesheets %}

{% block content %}

<main>
    <section id="hero">
        <div class="content">
            <h1>{{ "DÃ©couvrez notre collection"|trans }}</h1>
            <a href="{{ HERE }}#our-collection">Let's Go</a>
        </div>
    </section>

    <section id="products">
        <h1 id="our-collection">Our collection</h1>
        <div class="content">
            {% for product in products %}
                <div class="product">
                    <h2>{{ product.name }}</h2>
                    <button onclick="addToCart({{ product.id }})">Add to cart</button>
                    <a href="{{ product.href }}">View more</a>
                    <p>{{ product.description }}</p>
                    <p>{{ product.price }}</p>
                </div>
            {% endfor %}
        </div>
    </section>
</main>
    
{% endblock content %}